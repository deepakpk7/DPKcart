<div class="bg-gray-50 py-16">
   
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <!-- Section Title -->
    <h1 class="px-8 text-3xl font-bold text-gray-900">Hello, {{ customer.first_name }}</h1>
   <p class="px-8 text-gray-500 mt-1">Welcome back to Our Store ðŸ‘‹</p>
    <h1 class="text-4xl font-bold text-gray-900 mb-12 tracking-tight">
      {{ section.settings.title }}
    </h1>

    <!-- Product Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
      {% for product in section.settings.featured_collection.products limit: section.settings.number_of_products_to_show %}
        <div class="group relative bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-500">
          <a href="{{ product.url }}">
            <!-- Product Image -->
            <div class="relative h-72 w-full overflow-hidden">
              <img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }}" width="" height="" class="w-full h-full object-cover transform group-hover:scale-110 transition duration-700 ease-in-out">
              {% if product.compare_at_price > product.price %}
                <span class="absolute top-3 left-3 bg-red-500 text-white text-xs font-semibold px-3 py-1 rounded-full shadow-md">
                  Sale
                </span>
              {% endif %}
            </div>

            <!-- Product Info -->
            <div class="p-5 text-left">
              <h2 class="text-lg font-semibold text-gray-800 truncate group-hover:text-gray-900 transition">
                {{ product.title }}
              </h2>
              <p class="mt-2 text-gray-600 text-sm line-clamp-2">
                {{ product.description | strip_html | truncate: 60 }}
              </p>

              <!-- Price -->
              <div class="mt-3">
                {% if product.compare_at_price > product.price %}
                  <span class="text-lg font-bold text-gray-900">{{ product.price | money }}</span>
                  <span class="text-sm line-through text-gray-500 ml-2">{{ product.compare_at_price | money }}</span>
                {% else %}
                  <span class="text-lg font-bold text-gray-900">{{ product.price | money }}</span>
                {% endif %}
              </div>
            </div>
          </a>
        </div>
      {% else %}
        {% for item in (1..4) %}
          {% render 'product-card-placeholder' %}
        {% endfor %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Featured Products",
      "label": "Section Title"
    },
    {
      "type": "collection",
      "id": "featured_collection",
      "label": "Choose Collection"
    },
    {
      "type": "range",
      "id": "number_of_products_to_show",
      "min": 4,
      "max": 12,
      "default": 8,
      "label": "Number of Products to Show"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}