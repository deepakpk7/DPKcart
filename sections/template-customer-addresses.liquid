<div class="max-w-7xl mx-auto px-4 py-12" x-data="{ new_address: false }" x-cloak>
  <a href="{{ routes.root_url }}"
    class="inline-flex items-center gap-2 border border-gray-300 text-gray-700 hover:bg-gray-100 hover:text-gray-900 rounded-full px-5 py-2 transition duration-300">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"
      class="w-4 h-4">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
    </svg>
    Back
  </a>
  <!-- Header -->
  <div class="flex flex-col md:flex-row items-center justify-between mb-10 gap-4">
    <h1 class="text-3xl font-bold text-gray-900 tracking-tight">My Addresses</h1>
    <div class="flex flex-wrap gap-3">
      <button x-on:click="new_address = true"
        class="bg-gray-900 hover:bg-gray-800 text-white px-5 py-2.5 rounded-lg font-medium shadow-md hover:shadow-lg transition-all duration-200">
        + Add New Address
      </button>
      
    </div>
  </div>

  <!-- Address Grid -->
  <div>
    {% paginate customer.addresses by 8 %}
    {% if customer.addresses.size > 0 %}
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      {% for address in customer.addresses %}
      <div x-data="{ editModal: false }"
        class="relative bg-white border border-gray-200 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-200 p-6 flex flex-col group">

        <!-- Default Badge -->
        {% if address.id == customer.default_address.id %}
          <span class="absolute top-3 left-3 flex items-center gap-1.5 bg-gradient-to-r from-green-600 text-black text-xs font-medium px-3 py-1.5">
            {% render 'icon-tick' %} Default
          </span><br>


        {% endif %}

        <!-- Address Details -->
        <div class="text-sm text-gray-700 mt-2 mb-6 leading-relaxed text-left">
          {{ address | format_address }}
        </div>

        <!-- Buttons -->
        <div class="mt-auto flex gap-3">
          <button x-on:click="editModal = true"
            class="flex-1 bg-gray-900 hover:bg-gray-800 text-white text-xs font-medium py-2.5 rounded-md transition">
            Edit
          </button>
          <form method="post" action="{{ address.url }}" class="flex-1">
            <input type="hidden" name="_method" value="delete">
            <button type="submit"
              class="w-full border border-gray-400 text-gray-700 hover:bg-gray-100 text-xs font-medium py-2.5 rounded-md transition"
              onclick="return confirm('Do you really want to delete this address?');">
              Delete
            </button>
          </form>
        </div>

        <!-- Edit Address Modal -->
        <div x-show="editModal"
          class="fixed inset-0 z-50 flex items-center justify-center bg-gray-900 bg-opacity-50 px-4 py-8" x-transition>
          <div class="bg-white rounded-xl shadow-xl w-full max-w-lg p-6 relative">
            <div class="flex justify-between items-center border-b pb-3 mb-4">
              <h2 class="text-lg font-semibold text-gray-900">Edit Address</h2>
              <button x-on:click="editModal = false" class="text-gray-500 hover:text-gray-800">
                {% render 'icon-close' %}
              </button>
            </div>

            {% form 'customer_address', address %}
            {% include 'address-form-fields', form: form %}
            <div class="flex gap-3 mt-6">
              <button type="submit"
                class="flex-1 bg-gray-900 hover:bg-gray-800 text-white py-2.5 rounded-md font-medium transition">
                Save Changes
              </button>
              <button type="button" x-on:click="editModal = false"
                class="flex-1 border border-gray-400 text-gray-700 hover:bg-gray-100 py-2.5 rounded-md transition">
                Cancel
              </button>
            </div>
            {% endform %}
          </div>
        </div>

      </div>
      {% endfor %}
    </div>
    {% else %}
    <div class="text-center py-16">
      <p class="text-gray-600 text-lg">You donâ€™t have any saved addresses yet.</p>
      <button x-on:click="new_address = true"
        class="mt-4 bg-gray-900 hover:bg-gray-800 text-white px-6 py-2.5 rounded-lg font-medium shadow-sm hover:shadow-md transition">
        + Add Address
      </button>
    </div>
    {% endif %}
    {% endpaginate %}
  </div>

  <!-- Create New Address Modal -->
  <div x-show="new_address"
    class="fixed inset-0 z-50 flex items-center justify-center bg-gray-900 bg-opacity-50 px-4 py-8" x-transition>
    <div class="bg-white rounded-xl shadow-xl w-full max-w-lg p-6 relative">
      <div class="flex justify-between items-center border-b pb-3 mb-4">
        <h2 class="text-lg font-semibold text-gray-900">Add New Address</h2>
        <button x-on:click="new_address = false" class="text-gray-500 hover:text-gray-800">
          {% render 'icon-close' %}
        </button>
      </div>

      {% form 'customer_address', customer.new_address %}
      {% include 'address-form-fields', form: form %}
      <div class="flex gap-3 mt-6">
        <button type="submit"
          class="flex-1 bg-gray-900 hover:bg-gray-800 text-white py-2.5 rounded-md font-medium transition">
          Save Address
        </button>
        <button type="button" x-on:click="new_address = false"
          class="flex-1 border border-gray-400 text-gray-700 hover:bg-gray-100 py-2.5 rounded-md transition">
          Cancel
        </button>
      </div>
      {% endform %}
    </div>
  </div>
</div>

<!-- Province / Country Dynamic Logic -->
<script>
  class CustomerAddress {
    constructor() {
      this.initCountryProvinceSelectors();
    }

    initCountryProvinceSelectors() {
      document.querySelectorAll("select[data-country-selector]").forEach(select => {
        this.updateProvinces(select);
        select.addEventListener("change", () => this.updateProvinces(select));
      });
    }

    updateProvinces(select) {
      const provinces = JSON.parse(select.options[select.selectedIndex].dataset.provinces || "[]");
      const provinceSelector = document.querySelector(`#address_province_${select.dataset.id}`);
      if (!provinceSelector) return;

      if (provinces.length === 0) {
        provinceSelector.innerHTML = "<option value=''>N/A</option>";
        provinceSelector.disabled = true;
      } else {
        provinceSelector.innerHTML = provinces
          .map(([name]) => `<option value='${name}'>${name}</option>`)
          .join("");
        provinceSelector.disabled = false;
      }
    }
  }

  document.addEventListener("DOMContentLoaded", () => new CustomerAddress());
</script>