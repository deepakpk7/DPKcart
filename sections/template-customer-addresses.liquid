<div class="max-w-6xl mx-auto px-4 py-12" x-data="{ new_address: false }">
  <!-- Header -->
  <div class="flex flex-col md:flex-row items-center justify-between mb-8 gap-4">
    <h1 class="text-3xl font-bold text-gray-800">My Addresses</h1>
    <div class="flex items-center gap-3">
      <button
        x-on:click="new_address = true"
        type="button"
        class="px-5 py-2 bg-gray-900 text-white text-sm font-medium rounded-md hover:bg-gray-700 transition"
      >
        + Create New Address
      </button>
      <a
        href="{{ routes.account_url }}"
        class="text-sm text-gray-600 hover:text-gray-900 underline font-medium transition"
      >
        Back to Account
      </a>
    </div>
  </div>

  <!-- Modal: Add Address -->
  <div
    x-show="new_address"
    x-transition.opacity
    class="fixed inset-0 bg-gray-800 bg-opacity-60 flex justify-center items-start md:items-center z-50 overflow-y-auto"
  >
    <div
      class="bg-white w-full max-w-lg mx-4 my-10 md:my-0 rounded-lg shadow-lg overflow-hidden"
      @click.away="new_address = false"
    >
      <!-- Modal Header -->
      <div class="flex justify-between items-center px-6 py-4 border-b">
        <h2 class="text-lg font-semibold text-gray-800">Add New Address</h2>
        <button x-on:click="new_address = false" class="text-gray-500 hover:text-gray-800">
          {% render 'icon-close' %}
        </button>
      </div>

      <!-- Form -->
      <div class="p-6">
        {% form 'customer_address', customer.new_address %}
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
              <input
                type="text"
                name="address[first_name]"
                class="w-full border rounded-md px-3 py-2 focus:ring-2 focus:ring-gray-300 focus:outline-none"
              >
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
              <input
                type="text"
                name="address[last_name]"
                class="w-full border rounded-md px-3 py-2 focus:ring-2 focus:ring-gray-300 focus:outline-none"
              >
            </div>

            <div class="sm:col-span-2">
              <label class="block text-sm font-medium text-gray-700 mb-1">Company</label>
              <input
                type="text"
                name="address[company]"
                class="w-full border rounded-md px-3 py-2 focus:ring-2 focus:ring-gray-300 focus:outline-none"
              >
            </div>

            <div class="sm:col-span-2">
              <label class="block text-sm font-medium text-gray-700 mb-1">Address Line 1</label>
              <input
                type="text"
                name="address[address1]"
                class="w-full border rounded-md px-3 py-2 focus:ring-2 focus:ring-gray-300 focus:outline-none"
              >
            </div>

            <div class="sm:col-span-2">
              <label class="block text-sm font-medium text-gray-700 mb-1">Address Line 2</label>
              <input
                type="text"
                name="address[address2]"
                class="w-full border rounded-md px-3 py-2 focus:ring-2 focus:ring-gray-300 focus:outline-none"
              >
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">City</label>
              <input
                type="text"
                name="address[city]"
                class="w-full border rounded-md px-3 py-2 focus:ring-2 focus:ring-gray-300 focus:outline-none"
              >
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Country</label>
              <select
                name="address[country]"
                id="address_country_{{ form.id }}"
                class="w-full border rounded-md px-3 py-2 focus:ring-2 focus:ring-gray-300 focus:outline-none"
              >
                {{ all_country_option_tags }}
              </select>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Province</label>
              <select
                name="address[province]"
                id="address_province_{{ form.id }}"
                class="w-full border rounded-md px-3 py-2 focus:ring-2 focus:ring-gray-300 focus:outline-none"
              ></select>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">ZIP Code</label>
              <input
                type="text"
                name="address[zip]"
                class="w-full border rounded-md px-3 py-2 focus:ring-2 focus:ring-gray-300 focus:outline-none"
              >
            </div>

            <div class="sm:col-span-2">
              <label class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
              <input
                type="tel"
                name="address[phone]"
                class="w-full border rounded-md px-3 py-2 focus:ring-2 focus:ring-gray-300 focus:outline-none"
              >
            </div>
          </div>

          <div class="flex justify-end gap-3 mt-6">
            <button
              x-on:click="new_address = false"
              type="button"
              class="px-4 py-2 border text-gray-700 rounded-md hover:bg-gray-100 transition"
            >
              Cancel
            </button>
            <button
              type="submit"
              class="px-5 py-2 bg-gray-900 text-white rounded-md hover:bg-gray-700 transition"
            >
              Save Address
            </button>
          </div>
        {% endform %}
      </div>
    </div>
  </div>

  <!-- Address List -->
  <div class="mt-10">
    {% paginate customer.addresses by 10 %}
      {% if customer.addresses.size > 0 %}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {% for address in customer.addresses %}
            <div class="relative bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition overflow-hidden">
              {% if address == customer.default_address %}
                <div class="absolute top-3 left-3 bg-green-600 text-white text-xs px-3 py-1 rounded-full">Default</div>
              {% endif %}

              <div class="p-6 text-center text-gray-700">
                {{ address | format_address }}
              </div>

              <div class="flex justify-center gap-3 p-4 border-t bg-gray-50">
                <button class="px-4 py-2 text-sm bg-gray-900 text-white rounded-md hover:bg-gray-700 transition">
                  Edit
                </button>
                <button class="px-4 py-2 text-sm text-gray-700 border rounded-md hover:bg-gray-100 transition">
                  Delete
                </button>
              </div>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <div class="flex flex-col items-center justify-center py-20 text-center">
          <div class="bg-gray-100 p-6 rounded-full mb-4">
            {% render 'icon-map-pin' %}
          </div>
          <p class="text-gray-600 mb-2">You havenâ€™t added any addresses yet.</p>
          <button
            x-on:click="new_address = true"
            type="button"
            class="px-6 py-2 bg-gray-900 text-white text-sm font-medium rounded-md hover:bg-gray-700 transition"
          >
            Add Address
          </button>
        </div>
      {% endif %}
      {% render 'pagination', pagination: paginate %}
    {% endpaginate %}
  </div>
</div>
